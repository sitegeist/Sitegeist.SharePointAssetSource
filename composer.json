{
    "name": "sitegeist/sharepointassetsource",
    "type": "neos-package",
    "description": "A SharePoint asset source for the Neos.Media",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Bernhard Schmitt",
            "email": "schmitt@sitegeist.de",
            "role": "Developer"
        }
    ],
    "require": {
        "neos/media": "^8.0",
        "vgrem/php-spo": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "phpstan/phpstan": "^1.10.67",
        "neos/buildessentials": "^8.0",
        "mikey179/vfsstream": "^1.6",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin",
        "allow-plugins": {
            "neos/composer-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "Sitegeist\\SharePointAssetSource\\": "Classes"
        }
    },
    "extra": {
        "neos": {
            "package-key": "Sitegeist.SharePointAssetSource"
        }
    }
}
